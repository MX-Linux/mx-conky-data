#${color1}OS:$color${alignr}${execi 3600 awk 'NF{NF-=3}1' /etc/mx-version}
${color1}OS:$color${alignr}${head /etc/mx-version 1 3600}\
${color1}Kernel:$color${alignr}${kernel}$color
